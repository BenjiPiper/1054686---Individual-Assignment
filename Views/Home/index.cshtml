@addTagHelper *, _1054686___Individual_Assignment
@{
    Layout = "_Layout";
}
@section navbar{
    <ul>
        <li class="current"><a href="@Url.Action("Index","Home")">home</a></li>
        <li><a href="@Url.Action("Index","Events")">events</a></li>
        <li><a href="gallery.htm">gallery</a></li>
        <li><a href="@Url.Action("Index","News")">news</a></li>
        <li><a href="contact-us.htm">contact</a></li>
        <li>
            @if (User.Identity.IsAuthenticated)
            {
                <form id="logout" action="@Url.Action("Logout", "Account")" method="POST">
                    <a href="javascript: $('#logout').submit()" class="last">
                        Logout
                        <br /><span class="tagline">@User.Identity.Name</span>
                    </a>
                </form>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" title="log in" class="last">
                    Login
                </a>
            }
        </li>
    </ul>
}

<div id="body">
    <div id="main">
        <h2>Welcome to Bike Club, your source of cycling news, competitions and social events</h2>
        <div class="featured">
            <!-- start of featured -->
            <a href="about.htm"><img src="/images/home-biker.jpg" width="270" height="180" alt="Bikers Club" title="Bikers Club"></a>
            <a href="about.htm"><img src="/images/home-bikers.jpg" width="270" height="180" alt="Bikers Club" title="Bikers Club"></a>
            <p>
                Here we support all types of cycling whether your into extreme mountan biking, fast road cycling, BMX and stunts or just here for social rides we've got you sorted.<br>
                On this website you will be able to view news posted from other members. And view upcoming events and competitions.<br>
                If your new to the site you can register by clicking the login in link on the top right corner and creating a new accounr.
                This will allow you to post new events and news.<br>
                If your an existing member you can login by clicking the log in link.
            </p>
        </div> <!-- end of featured -->

        <div class="section">
            <!-- Placeholder -->
        </div> 
    </div>

    <div id="sidebar">
        <!-- start of sidebar -->
        <div id="gallery">
            <h3>Photo Gallery</h3>
            <ul>
                <li><a href="gallery.htm"><img src="/images/home-biker-thumbnail.jpg" width="125" height="80" alt="Bikers Club" title="Bikers Club"></a></li>
                <li><a href="gallery.htm"><img src="/images/home-boys.jpg" width="125" height="80" alt="Bikers Club" title="Bikers Club"></a></li>
                <li><a href="gallery.htm"><img src="/images/home-girls.jpg" width="125" height="80" alt="Bikers Club" title="Bikers Club"></a></li>
                <li><a href="gallery.htm"><img src="/images/home-family.jpg" width="125" height="80" alt="Bikers Club" title="Bikers Club"></a></li>
            </ul>
            <a class="more" href="gallery.htm">View more &#187;</a>
        </div>

        <h3>Get In Touch</h3>
        <form>
            <table>
                <tr><td><input type="text" name="" value="Name" onblur="if(this.value==''){this.value=this.defaultValue;}" onfocus="if(this.value==this.defaultValue){this.value='';}" /></td></tr>
                <tr><td><input type="text" name="" value="Email" onblur="if(this.value==''){this.value=this.defaultValue;}" onfocus="if(this.value==this.defaultValue){this.value='';}" /></td></tr>
                <tr><td><textarea name="message" onblur="if(this.value==''){this.value=this.defaultValue;}" onfocus="if(this.value==this.defaultValue){this.value='';}">Message</textarea></td></tr>
                <tr><td><input type="submit" value="" class="button" /></td></tr>
            </table>
        </form>
    </div>  <!-- end of sidebar -->
</div>  <!-- end of body wrapper -->